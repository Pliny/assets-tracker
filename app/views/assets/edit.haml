.form-tracker.center-block
  = bootstrap_form_for @asset, url: asset_path(@asset) do |f|
    - if @asset.errors.present?
      = f.alert_message "Errors found, please fix."
    = f.text_field :serial_no
    = f.fields_for @asset.user do |f|
      = f.text_field :full_name
    .form-inline
      = f.text_field :mac_address
      = f.text_field :ipv4_address
    .clearfix
    .marginalize-top2
    = f.text_area :notes, rows: 6
    .checkbox
      = f.check_box :in_house
    = f.fields_for @asset.hardware_version do |f|
      .form-inline
        = f.text_field :name
        = f.text_field :project
    .clearfix
    = f.submit "Update", class: "marginalize-top btn btn-primary", :'data-disable-with' => "Updating..."
